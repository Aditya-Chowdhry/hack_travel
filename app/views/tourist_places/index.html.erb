<!-- Banner -->
    <section id="banner" class="img-responsive">
      <h2>Not all those who wander are lost!</h2>

      <center>
      <div class="input-group">
        <%= form_tag(explore_path, method: :get) do %>
          <% places_array = @names.map { |place| [place[:name],place[:id]] } %>
          <%= select_tag(:place_id, options_for_select(places_array), class: "dropdown_single") %>
          <span class="input-group inline-block">
            <button class="btn btn-default" action="submit">Explore!</button>
          </span>
        <% end %>
      </div><!-- /input-group -->
    </center>
    </section>


<footer class="footer">
     <div class="container">
       <p class="text-muted">Aditya Chowdhry</p>
     </div>
</footer>
